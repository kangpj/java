<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" metadata-complete="true" version="3.0">
  <display-name>Play Ball</display-name>
  <description>
  :-D
  </description>
  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>com.itmoth.playball.filter.CharsetFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  <resource-ref>
    <res-ref-name>jdbc/erii</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>plan</servlet-name>
    <servlet-class>com.itmoth.playball.controller.PlanServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>plan</servlet-name>
    <url-pattern>/plan</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>lookup</servlet-name>
    <servlet-class>com.itmoth.playball.controller.LookupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>lookup</servlet-name>
    <url-pattern>/lookup</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>userManage</servlet-name>
    <servlet-class>com.itmoth.playball.controller.UserManageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userManage</servlet-name>
    <url-pattern>/userManage</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>addUser</servlet-name>
    <servlet-class>com.itmoth.playball.controller.AddUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addUser</servlet-name>
    <url-pattern>/addUser</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>